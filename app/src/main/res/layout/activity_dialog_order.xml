<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.DialogOrderActivity">

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_order_dialog"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_further_dialog"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_below="@+id/rv_order_dialog"
            android:text="Подтвердить"/>

        <Button
            android:id="@+id/btn_cancel_dialog"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:layout_alignRight="@+id/btn_further_dialog"
            android:layout_alignBottom="@+id/btn_further_dialog"
            android:text="Закрыть" />

    </LinearLayout>

</LinearLayout>